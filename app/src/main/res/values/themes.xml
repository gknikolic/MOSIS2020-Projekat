<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FindPet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/persianGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orangeYellowCrayaola</item>
        <item name="colorSecondaryVariant">@color/sandyBrown</item>
        <item name="colorOnSecondary">@color/burntSiena</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/blue</item>
        <item name="android:strokeColor">@color/blue</item>
        <item name="android:colorButtonNormal">@color/blue</item>
    </style>


    <style name="Theme.FindPet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FindPet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FindPet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>